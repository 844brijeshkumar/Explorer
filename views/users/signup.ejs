<% layout("/layout/boilerplate") %>

<div class="row">
<div class="col-6 offset-3">
<div class="offset-3 mt-3">
    <h1><b>Sign Up for Explorer</b></h1><br>
</div>
<form method="POST" action="/signup" class="needs-validation" novalidate>

    <div class="mb-3">
        <label for="username" class="form-label"><b>User Name</b></label>
        <input name="username" id="username" type="text" class="form-control" required/>
        <div class="valid-feedback">looks good</div>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label"><b>Email</b></label>
        <input name="email" id="email" type="text" class="form-control" required/>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label"><b>Password</b></label>
        <input name="password" id="password" type="password" class="form-control" required/>
    </div>
    <br>
    <button class="btn add-btn offset-5">SingUp</button>
    <br>
</form>
</div>
</div>