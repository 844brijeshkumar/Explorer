<% layout("/layout/boilerplate") %>

  <div class="row mb-3">
    <div class="col-8 offset-3 mt-3 mb-2">
      <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
      <div class="card-body">
        <p class="card-text"> <i><%= listing.owner.username %></i> </p>
        <p class="card-text"> <%= listing.description %> </p>
        <p class="card-text"> 
          <% if (listing.price !== null) { %>
            &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <% } %>
        </p>
        <p class="card-text">  <%= listing.location %> </p>
        <p class="card-text">  <%= listing.country %> </p>
        
      </div>
      
      <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
      <div class="btns">
        <form method="GET" action="/listings/<%= listing._id %>/edit">
          <button class="btn btn-link offset-3">Edit</button>
        </form>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-delete offset-5">Delete</button>
        </form>
      </div>
      <% } %>
      <hr>
      
      <div class="col-8 offset-2 mt-2">
        <% if(currUser){ %>
        <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate > 
          <p><b>Leave Review</b></p>
          <div>
            <label class="form-label">Rating</label>
            <div class="star-rating">
                <input type="radio" id="star5" name="review[rating]" value="5" /><label for="star5" title="5 stars">★</label>
                <input type="radio" id="star4" name="review[rating]" value="4" /><label for="star4" title="4 stars">★</label>
                <input type="radio" id="star3" name="review[rating]" value="3" /><label for="star3" title="3 stars">★</label>
                <input type="radio" id="star2" name="review[rating]" value="2" /><label for="star2" title="2 stars">★</label>
                <input type="radio" id="star1" name="review[rating]" value="1" /><label for="star1" title="1 stars">★</label>
            </div>
          </div>

          <div class="mt-1 mb-1">
            <label for="comment" class="form-label">Comment</label>
            <textarea cols="30" rows="5" name="review[comment]" id="comment" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter your comment for review</div>
          </div>

          <br>
          <button class="btn add-btn">Submit</button>
        </form>
        <% } %>
      </div>

      <div class="row">
        <p><b>All Reviews</b></p>
        <hr>
        <% for(let review of listing.reviews){ %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <p class="card-title"><i> @<%- review.author.username %> </i></p>
              <p class="card-text">
                <% for(let i = 1; i <= 5; i++) { %>
                  <% if(i <= review.rating) { %>
                    <span>★</span>
                  <% } else { %>
                    <span>☆</span>
                  <% } %>
                <% } %>
              </p>
              <p class="card-text"> <%= review.comment %> </p>

              <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                <button class="btn btn-sm btn-delete">delete</button>
              </form>
            </div>
         </div>
        <% } %>
    </div>
  </div>

  